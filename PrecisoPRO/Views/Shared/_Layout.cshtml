</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PrecisoPRO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            &copy; 2023 - PrecisoPRO - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/jquery.mask.min.js"></script>
    <script src="~/lib/jquery/jquery.maskedinput.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--Ativar dicas-->
    <script>
        $(function () {
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
            // $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <!--SCRIPT PARA REPONSIVIDADE-->
    <script>
        // Verificar a largura da tela e modificar a classe do elemento
        function verificarLarguraDaTela() {
            //Pega os elementos que contem a classe prn-resp-td
            var elementosTR = document.querySelectorAll('tr.prn-resp-td');

            //verifica o tamanho da tela
            if (window.innerWidth <= 700) 
            {

                // Loop para aplicar a mudança a cada elemento
                elementosTR.forEach(function (elemento) {
                    // Faça as alterações necessárias em cada elemento, adicionando fs-6
                    elemento.classList.add('fs-6'); // Adiciona uma nova classe, se necessário
                    
                });

               
            }
            else 
            {
                // Loop para aplicar a mudança a cada elemento
                elementosTR.forEach(function (elemento) {
                // Faça as alterações necessárias em cada elemento removendo a classe fs-6
                
                elemento.classList.remove('fs-6'); // Adiciona uma nova classe, se necessário
            });
            }
            
        }

        // Chamar a função quando a página é carregada
        verificarLarguraDaTela();

        // Chamar a função sempre que a largura da tela for alterada
        window.addEventListener('resize', verificarLarguraDaTela);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
